mixin icon(name)
    if name === 'android'
        include /img/svg/android.svg
    if name === 'arrow-down'
        include /img/svg/arrow-down.svg
    if name === 'close'
        include /img/svg/close.svg
    if name === 'copy'
        include /img/svg/copy.svg
    if name === 'go-up'
        include /img/svg/go-up.svg
    if name === 'ios'
        include /img/svg/ios.svg
    if name === 'lang-arrow'
        include /img/svg/lang-arrow.svg
    if name === 'right-arrow'
        include /img/svg/right-arrow.svg
    if name === 'test'
        include /img/svg/test.svg
    if name === 'test2'
        include /img/svg/test2.svg
    if name === 'toc-arrow'
        include /img/svg/toc-arrow.svg